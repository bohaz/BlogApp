<% @users.each do |user| %>
  <div class="user-container">
    <div class="user-content">
    <img src="<%= user.photo %>" alt="User photo">
    <h2><%= link_to user.name, user_path(user) %></h2>
    <div class="number-posts">
    <p>Number of posts: <%= user.posts.count %></p>
    </div>
    </div>
  </div>
<% end %>
<div class="signout-button-container">
<%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "signout-button" %>
</div>
